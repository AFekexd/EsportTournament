{
  "_comment": "Desktop App Configuration Example - Copy this file to appsettings.json and configure for your environment. DO NOT commit appsettings.json to version control!",

  "Keycloak": {
    "LoginUrl": "https://keycloak.pollak.info/realms/master/protocol/openid-connect/token",
    "ClientId": "esportdesktop",
    "Realm": "master"
  },

  "Api": {
    "BaseUrl": "http://localhost:5000/api",
    "StatusUrl": "http://localhost:5000/api/status/",
    "StartSessionUrl": "http://localhost:5000/api/session/start",
    "EndSessionUrl": "http://localhost:5000/api/session/end"
  },

  "Session": {
    "DefaultDurationSeconds": 3600,
    "WarningIntervals": [900, 600, 300, 60],
    "MaxPauseDurationSeconds": 300
  },

  "Security": {
    "FailSafePassword": "55pollak5565",
    "DisableTaskManager": true
  },

  "OfflineMode": {
    "Enabled": true,
    "CacheExpirationDays": 7,
    "MaxSessionDurationSeconds": 1800
  },

  "Telemetry": {
    "Enabled": true,
    "LogDirectory": null,
    "EnableConsoleLogging": true,
    "LogLevel": "Information"
  },

  "HealthCheck": {
    "Enabled": true,
    "CheckIntervalSeconds": 60,
    "TimeoutSeconds": 10
  },

  "Localization": {
    "DefaultCulture": "hu-HU",
    "SupportedCultures": ["hu-HU", "en-US"]
  },

  "UI": {
    "ShowNotifications": true,
    "NotificationDurationSeconds": 5,
    "MinimizeToTray": true
  }
}
